generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     String
  is_email_verified Boolean
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

enum user_role {
  buyer
  admin
  seller
}
